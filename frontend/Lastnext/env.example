# API Configuration
NEXT_PUBLIC_API_URL=https://pcms.live
NEXT_PRIVATE_API_URL=http://backend:8000
API_URL=http://backend:8000
NEXT_PUBLIC_MEDIA_URL=https://pcms.live

# App Configuration
APP_BASE_URL=https://pcms.live

# Auth0 Configuration - Frontend
NEXT_PUBLIC_AUTH0_BASE_URL=https://your-domain.com
NEXT_PUBLIC_AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your_auth0_client_id_here
NEXT_PUBLIC_AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
NEXT_PUBLIC_AUTH0_SECRET=your_auth0_secret_here_generate_with_openssl_rand_base64_32

# Auth0 Configuration - Backend
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER=https://your-tenant.auth0.com/
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-domain.com/api

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32

# Google OAuth (add your actual values)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database
# Replace with your actual database credentials
DATABASE_URL=postgresql://username:your_secure_password_here@db:5432/database_name

# Node Environment
NODE_ENV=production
