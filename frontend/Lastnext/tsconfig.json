{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "next-auth/react": ["./app/lib/next-auth-compat.client"],
      "next-auth/next": ["./app/lib/next-auth-compat.server"],
      "next-auth": ["./app/lib/next-auth-compat.client"],
      "next-auth/middleware": ["./app/lib/next-auth-compat.server"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.mjs", "app/components/preventive/PreventiveMaintenanceForm.tsx"],
  "exclude": ["node_modules"]
}
